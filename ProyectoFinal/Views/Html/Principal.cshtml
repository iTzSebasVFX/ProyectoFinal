<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Visor de Imágenes</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(90deg, #442063, #1d3263);
            color: white;
            display: flex;
            flex-direction: row;
            /* Cambiar a flex-direction: row para alinear contenedores horizontalmente */
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            overflow: hidden;
        }

        .container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
            margin-right: 20px;
            /* Para separar la imagen de los detalles */
        }

        /* Estilo para el título */
        .title {
            font-size: 36px;
            font-weight: bold;
            color: white;
            background-color: rgba(0, 0, 0, 0.5);
            border-radius: 15px;
            padding: 20px;
            margin-bottom: 30px;
            border: 3px solid #2b1a3d;
            /* Borde oscuro */
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.7);
            /* Sombra para resaltar el borde */
            animation: borderPulse 1.5s infinite ease-in-out;
            /* Animación del borde */
        }

        .video-border {
            position: absolute;
            top: -20px;
            left: -20px;
            width: 380px;
            height: 380px;
            z-index: -1;
            border-radius: 50%;
            overflow: hidden;
        }

        .video-border video {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .image-container {
            position: relative;
            width: 400px;
            height: 400px;
            margin-bottom: 20px;
            border-radius: 50%;
            overflow: hidden;
            border: 5px solid #2b1a3d;
            /* Color de borde oscuro */
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.7);
            /* Sombra para resaltar el borde */
            animation: borderPulse 1.5s infinite ease-in-out;
            /* Animación del borde */
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .image-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            opacity: 0;
            animation: fadeInOut 1s ease-in-out;
            /* Animación de fade */
        }

        .image-container img.visible {
            opacity: 1;
        }

        .feedback {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 100px;
            display: none;
        }

        .feedback.show {
            display: block;
            animation: fadeOut 2s forwards;
        }

        .buttons {
            display: flex;
            flex-direction: row;
            gap: 20px;
            justify-content: center;
            margin-top: 10px;
        }

        .buttons button {
            padding: 12px 25px;
            font-size: 14px;
            color: white;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            background-color: #333;
            transition: background-color 0.3s ease, transform 0.3s ease, box-shadow 0.3s ease;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.7);
            /* Sombra similar al borde */
        }

        .buttons button:hover {
            transform: scale(1.1);
            box-shadow: 0 0 20px rgba(108, 79, 148, 0.8);
            /* Sombra resaltada */
        }

        .buttons button:nth-child(1):hover {
            background-color: #007bff;
            /* Azul para "Anterior" */
        }

        .buttons button:nth-child(2):hover {
            background-color: #28a745;
            /* Verde para "Me Gusta" */
        }

        .buttons button:nth-child(3):hover {
            background-color: #dc3545;
            /* Rojo para "Eliminar" */
        }

        .buttons button:nth-child(4):hover {
            background-color: #ffc107;
            /* Amarillo para "Siguiente" */
        }

        /* Nuevo contenedor para los detalles */
        .details-container {
            width: 300px;
            background-color: rgba(0, 0, 0, 0.5);
            border-radius: 15px;
            padding: 20px;
            margin-top: 20px;
            border: 3px solid #2b1a3d;
            /* Borde oscuro */
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.7);
            animation: borderPulse 1.5s infinite ease-in-out;
            /* Animación del borde */
        }

        .details-container h3 {
            color: #ffffff;
            font-size: 20px;
            margin-bottom: 10px;
        }

        .details-container p {
            color: #dcdcdc;
            font-size: 16px;
        }
    </style>
</head>

<body>
    <div class="container">
        <!-- Título superior -->
        <div class="title">
            Personas con las que podrías interactuar
        </div>

        <div class="video-border">
            <video autoplay loop muted>
                <source src="https://www.videezy.com/download/24070" type="video/mp4">
                Your browser does not support HTML5 video.
            </video>
        </div>
        <div class="image-container" id="imageContainer">
            <img id="displayImage" class="visible" src="https://via.placeholder.com/400/FF0000/FFFFFF?text=Imagen+1"
                alt="Imagen">
            <div id="feedback" class="feedback"></div>
        </div>
        <div class="buttons">
            <button onclick="prevImage()">Anterior</button>
            <button onclick="likeImage()">Me Gusta</button>
            <button onclick="deleteImage()">Eliminar</button>
            <button onclick="nextImage()">Siguiente</button>
        </div>
    </div>

    <!-- Contenedor de detalles -->
    <div class="details-container">
        <h3>informacion</h3>
        <p id="imageDetails">Cargando detalles...</p>
    </div>

    <script>
        // Lista de URLs de imágenes y sus detalles
        const images = [
            {
                src: "https://imgs.search.brave.com/EgOkCRC2PzugfV34VZTvaxPi6snCuAHkFNlRI_sj4u8/rs:fit:500:0:0:0/g:ce/aHR0cHM6Ly9pLnBp/bmltZy5jb20vb3Jp/Z2luYWxzLzA2Lzlj/L2U2LzA2OWNlNjlj/OWEyMDE2NzhiODNk/NjA0ZDY2MTk0ZTQx/LmpwZw",
                details: "soy juan, reposao."
            },
            {
                src: "https://imgs.search.brave.com/es7UbOwLSwEho5VLvXzOhGCawbt2GpaZZSPawmNDkoU/rs:fit:500:0:0:0/g:ce/aHR0cHM6Ly9pLmNo/emJnci5jb20vZnVs/bC85MjI0MDk3MDI0/L2hDNDcyODg5NC93/ZWlyZC1tZW1lLWZh/Y2Utd3ctZQ.jpeg",
                details: "bart, 22 años solo bandidas ."
            },
            {
                src: "https://imgs.search.brave.com/SFvaAd8zBSzK_N1_fnSsAAHUnTXG5S2F1qPxyZW4gGA/rs:fit:500:0:0:0/g:ce/aHR0cHM6Ly9wcm9z/ZXR0aW5ncy5uZXQv/Y2RuLWNnaS9pbWFn/ZS9kcHI9MSxmPWF1/dG8sZml0PWNvbnRh/aW4sZ3Jhdml0eT10/b3AsaGVpZ2h0PTIw/MCxxPTk5LHNoYXJw/ZW49MSx3aWR0aD0y/MDAvd3AtY29udGVu/dC91cGxvYWRzL2hv/cmN1cy5wbmc",
                details: "sebas quiceno, edy mamaguevo."
            }
        ];

        let currentIndex = 0;

        // Función para actualizar la imagen actual con animación llamativa
        function updateImage() {
            const displayImage = document.getElementById("displayImage");
            const imageDetails = document.getElementById("imageDetails");

            displayImage.classList.remove("visible"); // Desaparecer la imagen actual
            setTimeout(() => {
                displayImage.src = images[currentIndex].src;
                imageDetails.textContent = images[currentIndex].details;
                displayImage.classList.add("visible"); // Mostrar la nueva imagen
            }, 500);
        }

        // Cambiar a la imagen anterior
        function prevImage() {
            currentIndex = (currentIndex === 0) ? images.length - 1 : currentIndex - 1;
            updateImage();
        }

        // Cambiar a la siguiente imagen
        function nextImage() {
            currentIndex = (currentIndex === images.length - 1) ? 0 : currentIndex + 1;
            updateImage();
        }

        // Mostrar mensaje de "Me gusta"
        function likeImage() {
            const feedback = document.getElementById("feedback");
            feedback.textContent = "✔";
            feedback.style.color = "#28a745";
            feedback.classList.add("show");
            setTimeout(() => feedback.classList.remove("show"), 2000);
        }

        // Eliminar la imagen actual
        function deleteImage() {
            const feedback = document.getElementById("feedback");
            feedback.textContent = "✘";
            feedback.style.color = "#dc3545";
            feedback.classList.add("show");
            setTimeout(() => feedback.classList.remove("show"), 2000);

            images.splice(currentIndex, 1);
            if (images.length === 0) {
                alert("No hay más imágenes disponibles.");
                document.getElementById("displayImage").src = "";
            } else {
                currentIndex = currentIndex % images.length;
                updateImage();
            }
        }

        // Inicializar la imagen
        updateImage();
    </script>
</body>

</html>
